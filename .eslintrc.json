// step0: npm install eslint
// step1: ./node_modules/.bin/eslint --init


{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "google",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "max-len": "off",
        "indent": [
            "error",
            4
        ],
        "new-cap": [
            "error",
            {
                "capIsNew": false
            }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "never"
            }
        ],
        "operator-linebreak": [
            "error",
            "before"
        ]
    }
}
